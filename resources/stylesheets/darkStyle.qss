QPushButton {
	background:#4d4d4d;
	border-radius:4px;
	border: 1px solid #bcd4ff;
	color:rgb(0, 0, 0);
}
QPushButton:hover {
 	background:rgba(228, 240, 255, 180);
}
QPushButton:pressed {
	background:rgba(235, 235, 235, 180);
}

QLineEdit {
 background-color:#4d4d4d;
 border-radius: 3px;
 padding-left: 4px;
 image:non;
}
 QLineEdit:hover {
 background:rgba(255, 255,255,40);
}
 QLineEdit::focus{
 background:rgba(255, 255,255,40); 
}

