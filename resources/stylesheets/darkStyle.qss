QComboBox {
    background-color:#4d4d4d;
    border: none;
	font: 20px 'Source Sans 3 Light';
	border-radius: 5px;
}

QComboBox:hover {
    background:rgba(255, 255,255,40); 
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border: none;
}

QComboBox::down-arrow {
    image: url(:/icons/down-arrow.png);
    width: 20px;
    height: 20px;
}

QComboBox QAbstractItemView {
  	background-color:#4d4d4d;
	color: #ffffff;
    border: none;
	border-radius: 0px;
}

QComboBox QAbstractItemView::item {
    height: 15px;
    padding: 5px;
	font: 20px 'Roboto';
}